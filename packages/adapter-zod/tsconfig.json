{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,

		"strict": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"paths": {
			"@surrealize/adapter-zod": ["./src/index.ts"]
		}
	},
	"include": ["src", "test", "build.ts"]
}
