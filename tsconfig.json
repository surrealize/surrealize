{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,

		"strict": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"paths": {
			"surrealize": ["./src/index.ts"]
		}
	}
}
